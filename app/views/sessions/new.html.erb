<h1 class="text-center">Sign in</h1>

<div class="row">
  <div class="col-4 mx-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', autofocus: true %><br/>

      <div class="text-center">
        <%= f.submit 'Sign in', class: 'mt-2 btn btn-primary' %>
      </div>
    <% end %><br/>
    <p class="text-center">Don't have an account? <%= link_to 'Sign Up Now', new_user_path %></p>
  </div>
</div>