<h1 class="text-center">Sign up</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'mb-1 form-control', autofocus: true %>
      <%= f.label :username %>
      <%= f.text_field :username, class:' mb-1 form-control' %>
      <div class="d-flex justify-content-between">
        <%= f.submit "Create account", class: 'mt-2 btn btn-primary' %>
        <%= link_to 'Cancel', :back, class: 'mt-2 btn btn-primary px-5' %>
      </div>
    <% end %>
  </div>
</div>