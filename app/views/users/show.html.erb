<div class="row">
  <div class="offset-4 col-md-4">
    <h3 class="text-center">
      <%= @user.username %><br/>
    </h3>
    
    <p>
      <strong> Created Events: </strong>
      <% @user.created_events.each do |created_event| %>
        <%= link_to created_event.description, event_path  %>
      <% end %>
    </p>

    <p>
      <strong> Events Attended: </strong>
      <% @user.attended_events.each do |event| %>
         <%= link_to event.description, event_path  %>
      <% end %>
    </p>
  </div>
</div>